{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
	<h1>User</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ user.id }}</td>
			</tr>
			<tr>
				<th>Username</th>
				<td>{{ user.username }}</td>
			</tr>
			<tr>
				<th>Roles</th>
				<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
			</tr>
			<tr>
				<th>Password</th>
				<td>{{ user.password }}</td>
			</tr>
		</tbody>
	</table>
	<div class="btn-group ml-3 float-right mb-2" role="groupe">
		<a href="{{ path('app_user_index') }}">
			<button class="btn btn-outline-secondary">Back</button>
		</a>
		<div class="ml-2 mr-2">
			{{ include('user/_delete_form.html.twig') }}
		</div>
		<a href="{{ path('app_user_edit', {'id': user.id}) }}">
			<button class="btn btn-outline-secondary">edit</button>
		</a>


	{% endblock %}
