{% extends 'base.html.twig' %}

{% block title %}Repa index{% endblock %}

{% block body %}
    <h1>Repa index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for repa in repas %}
            <tr>
                <td>{{ repa.id }}</td>
                <td>{{ repa.type }}</td>
                <td>{{ repa.prix }}</td>
                <td>
                    <a href="{{ path('repa_show', {'id': repa.id}) }}">show</a>
                    <a href="{{ path('repa_edit', {'id': repa.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('repa_new') }}">Create new</a>
{% endblock %}
